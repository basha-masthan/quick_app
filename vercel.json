{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel_app.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "project.settings"
  },
  "functions": {
    "vercel_app.py": {
      "maxDuration": 30
    }
  },
  "buildCommand": "python manage.py collectstatic --noinput && python manage.py migrate --run-syncdb"
}